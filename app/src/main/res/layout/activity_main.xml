<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.geomslayer.tic_tac_toe.MainActivity">

    <LinearLayout
        android:id="@+id/active_player_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="@string/active_player"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:id="@+id/active_player_img"
            android:layout_width="@dimen/active_player_image_size"
            android:layout_height="@dimen/active_player_image_size" />

    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:columnCount="3"
        android:rowCount="3">

        <ImageView
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"
            android:layout_margin="@dimen/cell_margin"
            android:background="@color/cell_background" />

        <ImageView
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"
            android:layout_margin="@dimen/cell_margin"
            android:background="@color/cell_background" />

        <ImageView
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"
            android:layout_margin="@dimen/cell_margin"
            android:background="@color/cell_background" />

        <ImageView
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"
            android:layout_margin="@dimen/cell_margin"
            android:background="@color/cell_background" />

        <ImageView
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"
            android:layout_margin="@dimen/cell_margin"
            android:background="@color/cell_background" />

        <ImageView
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"
            android:layout_margin="@dimen/cell_margin"
            android:background="@color/cell_background" />

        <ImageView
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"
            android:layout_margin="@dimen/cell_margin"
            android:background="@color/cell_background" />

        <ImageView
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"
            android:layout_margin="@dimen/cell_margin"
            android:background="@color/cell_background" />

        <ImageView
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"
            android:layout_margin="@dimen/cell_margin"
            android:background="@color/cell_background" />

    </GridLayout>

    <GridLayout
        android:id="@+id/item_field_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:columnCount="3"
        android:rowCount="3">

        <ImageView
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"
            android:layout_margin="@dimen/cell_margin"
            android:onClick="dropItem"
            android:scaleX="@dimen/item_scale"
            android:scaleY="@dimen/item_scale"
            android:tag="0" />

        <ImageView
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"
            android:layout_margin="@dimen/cell_margin"
            android:onClick="dropItem"
            android:scaleX="@dimen/item_scale"
            android:scaleY="@dimen/item_scale"
            android:tag="1" />

        <ImageView
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"
            android:layout_margin="@dimen/cell_margin"
            android:onClick="dropItem"
            android:scaleX="@dimen/item_scale"
            android:scaleY="@dimen/item_scale"
            android:tag="2" />

        <ImageView
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"
            android:layout_margin="@dimen/cell_margin"
            android:onClick="dropItem"
            android:scaleX="@dimen/item_scale"
            android:scaleY="@dimen/item_scale"
            android:tag="3" />

        <ImageView
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"
            android:layout_margin="@dimen/cell_margin"
            android:onClick="dropItem"
            android:scaleX="@dimen/item_scale"
            android:scaleY="@dimen/item_scale"
            android:tag="4" />

        <ImageView
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"
            android:layout_margin="@dimen/cell_margin"
            android:onClick="dropItem"
            android:scaleX="@dimen/item_scale"
            android:scaleY="@dimen/item_scale"
            android:tag="5" />

        <ImageView
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"
            android:layout_margin="@dimen/cell_margin"
            android:onClick="dropItem"
            android:scaleX="@dimen/item_scale"
            android:scaleY="@dimen/item_scale"
            android:tag="6" />

        <ImageView
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"
            android:layout_margin="@dimen/cell_margin"
            android:onClick="dropItem"
            android:scaleX="@dimen/item_scale"
            android:scaleY="@dimen/item_scale"
            android:tag="7" />

        <ImageView
            android:layout_width="@dimen/cell_size"
            android:layout_height="@dimen/cell_size"
            android:layout_margin="@dimen/cell_margin"
            android:onClick="dropItem"
            android:scaleX="@dimen/item_scale"
            android:scaleY="@dimen/item_scale"
            android:tag="8" />

    </GridLayout>

    <LinearLayout
        android:id="@+id/retry_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/big_background"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size" />

        <Button
            android:id="@+id/play_again_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="playAgain"
            android:text="@string/play_again" />

    </LinearLayout>

</RelativeLayout>
